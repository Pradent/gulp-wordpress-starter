{
    "theme": {
        "name": "Gulp WordPress Starter",
        "textdomain": "gulp-wordpress-starter",
        "destFile": "gulp-wordpress-starter.pot",
        "destDir": "./languages",
        "package": "gulp-wordpress-starter",
        "bugReport": "https://wordpress.org",
        "lastTranslator": "John Doe <me@example.com>",
        "team": "Team <team@example.com>"
    },

    "root": {
        "base": "./",
        "src": "./assets/src",
        "dest": "./assets/dist"
    },

    "css": {
        "src": "./assets/src/sass",
        "dest": "./assets/dist/css",
        "autoprefixer": {
            "browsers": ["last 3 version"]
        },
        "sourcemaps": {
            "includeContent": false,
            "sourceRoot": "source"
        }
    },

    "js": {
        "src": "./assets/src/scripts",
        "dest": "./assets/dist/js"
    },

    "images": {
        "src": "./assets/src/raw-images",
        "dest": "./assets/dist/images"
    }
}
